.row
  .span8
    .well
      = s3_uploader_form post: upload_identification_card_profile_candidates_path, as: "profile_candidate[identification_card]", 
        id: "myS3Uploader", max_file_size: 10.megabytes do
        - if @profile.identification_card?
          .controls
            = link_to @profile.identification_card do
              = image_tag(@profile.identification_card, :style => 'width:100px; height:100px')
      
        -if @profile.identification_card?
          %br
          %p 
            Untuk mengganti foto, silakan unggah foto baru Anda.
            %br
            Jika tidak ingin mengganti, silakan klik Next
  
        = file_field_tag :file, multiple: true
        %script{id:"template-upload", type:"text/x-tmpl"}
          %div{id:"file-{%=o.unique_id%}", :class=>"upload"}
            {%=o.name%}
            .progress
              .bar{style:"width: 0%"}      
  
        %br
        %br
        = link_to "< Back", step3_profile_candidates_path, :class => 'btn btn-danger'
        = link_to "Next >", step4a_profile_candidates_path, :class => 'btn btn-primary'


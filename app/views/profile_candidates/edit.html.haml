    = simple_form_for(@profile, :url => update_point_profile_candidates_path, :html => {:id => 'profile_form', :class => 'form-horizontal'}) do |f|
      = f.error_notification
      = display_base_errors @profile

      .form-inputs
        = f.input :id, :as => :hidden
        - if params[:page]
          = hidden_field_tag 'page', params[:page]
        / = f.input :organization_point, :label => "Pengalaman organisasi", :collection => [["A", 4], ["B", 3], ["C", 2], ["D", 1], ["E", 0]], :include_blank => false
        = f.input :committee_point, :label => "CV point", :collection => [["A", 4], ["B", 3], ["C", 2], ["D", 1], ["E", 0]], :include_blank => false
        = f.input :personal_knowledge_point, :label => "Esai", :collection => [["A", 4], ["B", 3], ["C", 2], ["D", 1], ["E", 0]], :include_blank => false
        = f.input :document_completeness_point, :label => "Dokumen", :collection => [["A", 4], ["B", 3], ["C", 2], ["D", 1], ["E", 0]], :include_blank => false
        / = f.input :reliability_point, :label => "Reliability", :collection => [["A", 4], ["B", 3], ["C", 2], ["D", 1], ["E", 0]], :include_blank => false
        / = f.input :willingness_point, :label => "Willingness", :collection => [["A", 4], ["B", 3], ["C", 2], ["D", 1], ["E", 0]], :include_blank => false
        = f.input :special_location_comment, :label => "Keterangan khusus", :input_html => {:rows => 8, :class => "span5"}
        = f.input :special_character_comment, :label => "Hasil kepo recruiter", :input_html => {:rows => 8, :class => "span5"}
        = f.input :school, :label => "Insitusi (jika perlu ada perbaikan)", :input_html => {:style => 'width:300px', "data-provide" => "typeahead", "data-source" => all_school_json}
      .form-actions
        = f.submit "Simpan", :class => "btn btn-primary"